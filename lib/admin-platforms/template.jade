- var prepend = forum ? ('/' + forum.name) : ''

#platforms-wrapper
  .platforms-admin
    .row.well.well-lg
      .col-md-2.col-xs-12
        a.btn.btn-success.btn-block.new(href='#{prepend}/admin/platforms/create')
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin-platforms.list.add-platform')
      .col-md-7.col-xs-12.text-center
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder='#{t("admin-platforms.list.search.placeholder")}', autofocus)
      .col-md-3.col-xs-12.text-center
        .btn-group
          span.sort-label.pull-left=t('admin-platforms.list.sort')
          button.btn.btn-primary.sort(data-sort='platform-date')
            span.glyphicon.glyphicon-time
          button.btn.btn-primary.sort(data-sort='platform-title')
            span.glyphicon.glyphicon-font
    .row
      .list.list-group
        - each platform in platforms
          a.list-group-item(href="#{prepend}/admin/platforms/" + platform.id, data-platformid=platform.id)
            button.btn.btn-default.pull-right.delete-platform
              span.glyphicon.glyphicon-trash
            h4.platform-title=platform.mediaTitle
              small=platform.platformId
            - if (platform.author)
              span.glyphicon.glyphicon-user
              span.text=platform.author
            span.glyphicon.glyphicon-tag
            //- To DO FIGURE OUT HOW TAG GETS LOADED AND MATCHED ON CLIENT SIDE
            //- span.text.platform-id=platform.tag.name
            span.platform-date.hide=platform.createdAt
