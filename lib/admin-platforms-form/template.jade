- var prepend = forum ? ('/' + forum.name) : ''

#platforms-wrapper
  .platform-admin.col-md-9
    .heading
      .circle
        i.icon-user
      h1= t(form.title)
    form.form-horizontal(action=form.action, method="post", role="form", autocomplete="off", novalidate, autovalidate='autovalidate', autosubmit='autosubmit')
      input(type='hidden', name='_platform_id_', value=platform.id)
      ul.form-messages
      .form-group
        label= t('admin-platforms-form.label.mediaTitle')
        input.form-control(type='text', id="mediaTitle", name='mediaTitle', tabindex=1, placeholder=t('admin-platforms-form.label.mediaTitle'), value=platform.mediaTitle, validate='required')
      .form-group
        label= t('admin-platforms-form.label.platformId')
        input.form-control(type='text', id="platformId", name='officialTitle', tabindex=3, placeholder=t('admin-platforms-form.label.platformId'), value=platform.officialTitle)
      .form-group
        label= t('admin-topics-form.label.tag')
        select.form-control(name='tag', tabindex=2, validate='required')
          - each tag in tags
            option(selected= platform.tag ? tag.hash === platform.tag.hash : false, value=tag.hash)= tag.name
      .form-group
        label= t('admin-platforms-form.label.author')
        input.form-control(type='text', id="platformAuthor", name='platformAuthor', tabindex=4, placeholder='John Doe', value=platform.author, validate='author')
      .form-group
        label= t('admin-platforms-form.label.author') + ' URL'
        input.form-control(type='text', id="authorUrl", name='authorUrl', tabindex=5, placeholder='http://en.wikipedia.org/wiki/John_Doe', value=platform.authorUrl, validate='url')
      .form-group
        label= t('admin-platforms-form.label.global')
        .global-toggle
      .form-group
        label= t('admin-platforms-form.label.summary')
        textarea.form-control(name='body', tabindex=7)= platform.body
      .form-group
        label=t('admin-platforms-form.label.resources')
        .platform-links
          - if (platform.links && platform.links.length)
            - each link, id in platform.links
              include link
        .pull-left
          a.add-link.btn.btn-block.btn-info(href='#')= t('admin-platforms-form.button.add-link')
          .form-group: input.btn.btn-success.btn-block.btn-lg.hide(type='submit', tabindex=12, value=t('admin-platforms-form.button.submit'))
        span.add-link-forbidden.hide=t('admin-platforms-form.message.add-link-forbidden')
      .form-group
        label= t('admin-platforms-form.label.create-from-others')
        .platform-options-search-container
          #platform-operations-container
            .option(value='–')
              span.platform-title= 'without'
            .option(value='+')
              span.platform-title= 'and'
            .option(value='∩')
              span.platform-title= 'intersection'
            .option(value='(')
              span.platform-title= '('
            .option(value=')')
              span.platform-title= ')'
          input.form-control#platform-options-search(placeholder='#{t("admin-platforms.list.search.placeholder")}')
          span.input-group-addon(style='width:auto')
            i.glyphicon.glyphicon-search
        #platform-options-container

        label.top-margin= t('admin-platforms-form.label.instructions')
        #platformTree.platforms-select.form-control
        input.form-control.hide(name='platformTree', value=platform.platformTree ? platform.platformTree.string : null, tabindex=8, validate='treesyntax')
  .col-md-3.commands
    a.btn.btn-success.btn-block.save
      span=t('admin-platforms-form.button.submit')
    a.btn.btn-primary.btn-block.make-private(class=platform.public && platform.id ? '' : 'hide')
      span=t('admin-platforms-form.button.make-private')
    a.btn.btn-primary.btn-block.make-public(class=platform.draft && platform.id ? '' : 'hide')
      span=t('admin-platforms-form.button.make-public')
    - if (platform.id)
      a.btn.btn-danger.btn-block.delete-platform
        span=t('admin-platforms-form.delete-platform.button.delete')
