@import '../../boot/vars'

.sidebar-workspace-platform-list
  .platform-item
    
    &:hover
      background #eee
    
    &.targeted
      border 1px solid black
      border-radius 1px

    div.platform-container
      flexbox(flex)
      flex-direction(row)
      flex-justify(space-between)
      
      width 100%
      border-bottom 1px solid lighten(#BDC3C7, 40%)
      padding-top 10px
      padding-bottom 10px
      padding-right 30px
      
      .platform-link
        text-decoration none
        color #666

      span.title
        font-size 15px
        line-height 19px
        font-weight bold
        display block
        margin-bottom 0px
        padding-right 20px

      &.active
        color #666
        background #fff
      

      padding-left spacing
      position relative
