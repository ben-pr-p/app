@import '../../boot/vars'

.sidebar-topic-list
  li
    border-bottom 1px solid lighten(#BDC3C7, 40%)
    
    div.topic-container
      display flex
      justify-content space-between
      padding-top 10px
      padding-bottom 10px
      cursor pointer
      padding-right 30px

      span.title
        font-size 15px
        line-height 19px
        font-weight bold
        display block
        margin-bottom 0px
        padding-right 20px

      &.active
        color black
        background #fff

      padding-left spacing
      color black
      position relative
      color #666

      &:hover
        background #eee
            
      .opinion-option
        color white
        padding-top 5px
        padding-bottom 5px
        padding-left 5px
        padding-right 5px
        border-radius 3px
        text-decoration none

        &.yes
          background-color #a4cb53
          &:hover, selected
            background-color darken(#a4cb53, 40%)

        &.no
          background-color #d95e59
          &:hover, selected
            background-color darken(#d95e59, 40%)
          i
            display block
            transform s("rotate(%s)", 180deg) 
            -ms-transform s("rotate(%s)", 180deg) /* IE 9 */
            -webkit-transform s("rotate(%s)", 180deg)

        &.abstain
          background-color #666
          &:hover, selected
            background-color darken(#666666, 40%)
    
        