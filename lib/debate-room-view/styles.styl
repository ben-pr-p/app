@import './node-card/styles.styl'

.debate-room-container
  width 100%
  height 100%
  
  svg#debate-room
    width 100%
    height 100%
    cursor default
    user-select none
  
  svg:not(.active):not(.ctrl)
    cursor crosshair
  
  path.edge
    fill none
    cursor default
  
  svg:not(.active):not(.ctrl)
    path.edge
      cursor pointer
  
  path.edge.selected
    stroke-dasharray 10, 2
  
  path.edge.dragline
    pointer-events none
  
  path.edge.hidden
    stroke-width 0
    
  foreignObject
    -webkit-user-select none
  
  .controls
    position fixed

    .control-button
      height 30px
      width 30px
      padding 3px
      border 1px solid #bbb
      border-radius 5px
      cursor pointer
      box-shadow 1px 1px #ddd
      
      &:hover
        background-color #f8f8f8
      
      &:active
        background-color #f0f0f0
        box-shadow 2px 2px #ddd
      
      &.search-button
        padding 6px

.node-box
  -webkit-user-select none
  -moz-user-select none  
  -ms-user-select none
