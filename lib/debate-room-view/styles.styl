@import './node-card/styles.styl'

.debate-room-container
  width 100%
  height 100%
  
  svg#debate-room
    width 100%
    height 100%
    cursor default
    user-select none
  
  svg:not(.active):not(.ctrl)
    cursor crosshair
  
  path.edge
    fill none
    cursor default
  
  svg:not(.active):not(.ctrl)
    path.edge
      cursor pointer
  
  path.edge.selected
    stroke-dasharray 10, 2
  
  path.edge.dragline
    pointer-events none
  
  path.edge.hidden
    stroke-width 0
    
  foreignObject
    -webkit-user-select none
  
  .controls
    position fixed
    height 30px
    flexbox(flex)
    flex-direction(row)

    .control-button
      flexbox(flex)
      flex-direction(row)
      flex-align(center)
      flex-items(center)
      
      width 30px
      padding 3px
      border 1px solid #bbb
      border-radius 5px
      cursor pointer
      box-shadow 1px 1px #ddd
      
      img
        width 20px
        height 20px
      
      &:hover
        background-color #f8f8f8
      
      &:active
        background-color #f0f0f0
        box-shadow 2px 2px #ddd
      
      &.search-button
        padding 6px
        width auto
    
        input.search-field
          background-color inherit
          width 200px
          padding 3px
          border 0px

.node-box
  -webkit-user-select none
  -moz-user-select none  
  -ms-user-select none
