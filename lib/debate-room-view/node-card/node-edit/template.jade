.node-edit
  form.node-edit-form(action='#', autovalidate='autovalidate')
    p
      input.title(name='title', validate='required max-length:50', tabindex='1', placeholder=t('common.title'))= node.title
    p
      textarea(name='text', rows='4', validate='required max-length:4096', tabindex='2', placeholder=t('common.body'))= node.text
    - var buttonVal = t('common.ok')
    input.btn.form-submit.pull-right(type='submit', value=buttonVal, tabindex='3')
    input.btn.btn-cancel.pull-right(type='button', value=t('common.cancel'), tabindex='4')
    span.help-text.form-messages
